<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="acanto_crm_stage_tree" model="ir.ui.view">
        <field name="name">acanto.crm.stage.tree</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_tree"/>
        <field name="arch" type="xml">
            <field name="is_won" position="after">
                <field name="esta_perdida"/>
            </field>
        </field>
    </record>

    <record id="acanto_crm_stage_form" model="ir.ui.view">
        <field name="name">acanto.crm.stage.form</field>
        <field name="model">crm.stage</field>
        <field name="inherit_id" ref="crm.crm_stage_form"/>
        <field name="arch" type="xml">
            <field name="is_won" position="after">
                <field name="esta_perdida"/>
            </field>
        </field>
    </record>

</odoo>
